<section id="section_recipe_show">
  <div class="container">
    <div class="row">

      <div class="col-md-4">
        <%= image_tag @recipe.image.url(:medium), class: "img-fluid img-thumbnail" %>
      </div>
      <div class="col-md-8">
        <div id="recipe_info">
          <h4><%= @recipe.title %></h4>
          <p class="text-muted"><%= @recipe.description %></p>
        </div>
      </div>

      <div class="col-md-6 mt-4">
        <div id="ingredients">
          <% @recipe.ingredients.each do |ingredient| %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= ingredient.name%></li>
            </ul>
          <% end %>
        </div>
      </div>
      <div class="col-md-6 mt-4">
        <div id="directions">
          <% @recipe.directions.each do |direction| %>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= direction.step %></li>
            </ul>
          <% end %>
        </div>
      </div>

      <div class="col-md-12 mt-4">
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-primary btn-lg" %>
        <%= link_to "Delete", recipe_path(@recipe), method: :delete, class: "btn btn-danger btn-lg", data: {confirm: "Are you sure?"} %>
      </div>

    </div>
  </div>
</section>